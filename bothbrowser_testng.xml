<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="false">

  <!-- Listeners to capture and manage test events -->
  <listeners>
    <listener class-name="Utility.Listenerclass"></listener>
  </listeners>

  <test name="ChromeTests">
    <parameter name="browser" value="Chrome" />
    <classes>
      <class name="Tests.SignupTests"/>
      <class name="Tests.Logintest"/>
      <class name="Tests.Onewaytest"/>
      <class name="Tests.Roundtriptest"/>
      <class name="Tests.validatetest"/>
    </classes>
  </test> 
  
  <test name="FirefoxTests">
    <parameter name="browser" value="Firefox" />
    <classes>
      <class name="Tests.SignupTests"/>
      <class name="Tests.Logintest"/>
      <class name="Tests.Onewaytest"/>
      <class name="Tests.Roundtriptest"/>
      <class name="Tests.validatetest"/>
    </classes>
  </test> 

</suite>
